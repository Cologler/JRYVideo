<UserControl x:Class="JryVideo.Controls.StarEditorControl.StarEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JryVideo.Controls.StarEditorControl"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top">
            <RadioButton x:Name="Star1RadioButton"
                         Checked="Star1RadioButton_OnChecked"/>
            <RadioButton x:Name="Star2RadioButton"
                         Checked="Star2RadioButton_OnChecked"/>
            <RadioButton x:Name="Star3RadioButton"
                         Checked="Star3RadioButton_OnChecked" />
            <RadioButton x:Name="Star4RadioButton"
                         Checked="Star4RadioButton_OnChecked"/>
            <RadioButton x:Name="Star5RadioButton"
                         Checked="Star5RadioButton_OnChecked"/>
            <TextBlock x:Name="TipTextBlock"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
